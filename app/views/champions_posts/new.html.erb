<%= stylesheet_link_tag "champions_new", media: 'all', 'data-turbolinks-track': 'reload' %>

<body>
    <h1 class="posts">チャンピオンズリーグ投稿</h1>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_with(model: @champions_post, local: true) do |f| %>
            <%= f.label :タイトル, class: "title" %>
            <%= f.text_field :title, class: "form-control" %>

            <%= f.label :コメント, class: "post_comment" %>
            <%= f.text_area :text, class: "form-control" %>

            <%= f.label :画像, class: "post_image" %>
            <%= f.file_field :image %>
            <%= f.submit "投稿", class: "btn btn-primary" %>


            <% end %>
        </div>
    </div>
</body>