            <% else %>
            <li class="signup"><%= link_to("新規登録", "/signup", {class: "link"}) %></li>
            <li class="login"><%= link_to("ログイン", "/login", {class: "link"}) %></li>
            <% end %>
        </ul>
    </nav>
</header>